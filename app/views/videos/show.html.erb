<div class="container">
  <%= link_to image_tag("punchGloveLogo.png"), root_path %>
  <br><br>

  <iframe width="1120" height="641" src="https://www.youtube.com/embed/<%=@video.uid%>" frameborder="0" allowfullscreen></iframe>
  
  <h2>Add a comment:</h2>
    <%= form_for([@video, @video.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body, :rows => 10, :cols => 80 %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <h2>Comments</h2>
    <% @video.comments.each do |comment| %>
    <h4>
      <strong><%= comment.commenter %></strong>
    </h4>   
    <p>
      <%= comment.body %>
    </p>
  <% end %>

  <%= link_to 'Back', root_path, class: 'btn btn-primary btn-lg' %>
</div>

